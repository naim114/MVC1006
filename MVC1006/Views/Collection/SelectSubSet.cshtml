@model IEnumerable<MVC1006.Models.Employee>
@{
    int row = 1;
}

<h3>List of Employee</h3>

<table border="1" width="100%">
    <tr>
        <th>#</th>
        <th>Emp Id</th>
        <th>Name</th>
        <th>Position</th>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <th>@row</th>
            <th>@employee.EmpId</th>
            <th>@employee.Name</th>
            <th>@employee.Position</th>
        </tr>
        row++;
    }
</table>